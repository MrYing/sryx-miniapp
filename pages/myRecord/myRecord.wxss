
.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 34rpx;

  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  height: 100rpx;
  padding: 20rpx 48rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-bottom: 1rpx solid #f0f0f0;
  color: #D8D8D8;
}

.kind-list-item {
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}

.kind-list-item-hd {
  padding: 20rpx 48rpx;
  display: flex;
  align-items: center;
}
.kind-list-item-hd-show {
  opacity: 0.7;
  background-color: #f8f8f8;
}

.kind-list-item-bd-show {
  height: auto;
}

